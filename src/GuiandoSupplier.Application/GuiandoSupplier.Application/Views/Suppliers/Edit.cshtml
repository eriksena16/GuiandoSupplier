@using GuiandoSupplier.Domain.Entities
@model GuiandoSupplier.Domain.Entities.SupplierDTQ

@{
    ViewData["Title"] = "Editar";
}

<h4> Editar descrição do fornecedor</h4>
<hr />
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" required/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Verticals" class="control-label"></label>
                        <select asp-for="Verticals" class="form-control" asp-items="Html.GetEnumSelectList<Verticals>()" required>
                            <option value="">-- Selecione --</option>
                        </select>
                        <span asp-validation-for="Verticals" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LinkLogin" class="control-label"></label>
                        <input asp-for="LinkLogin" class="form-control" required/>
                        <span asp-validation-for="LinkLogin" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            @Html.DisplayNameFor(model => model.Historic)
                            <br />
                            <p><input class="form-check-input" asp-for="Historic" /> </p>
                        </label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FileLogo" class="control-label"></label>
                        <div class="custom-file">
                            <input type="file" asp-for="FileLogo" class="custom-file-input" id="FileLogo" accept=".jpg"/>
                            <label class="custom-file-label" for="customFileLang">Selecione um arquivo jpg</label>
                            <span asp-validation-for="FileLogo" class="text-danger"></span>
                        </div>

                    </div>
                </div>

            </div>
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
