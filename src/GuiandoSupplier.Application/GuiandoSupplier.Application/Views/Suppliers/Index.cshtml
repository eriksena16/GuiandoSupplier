@model IEnumerable<GuiandoSupplier.Domain.Entities.SupplierDTO>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Cadastrar fornecedor</a>
</p>
<table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkLogin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Historic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerticalsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LogoUrl)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-light">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.LinkLogin)" target="_blank">Clique aqui</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Historic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VerticalsName)
                </td>
                <td>
                    <img src='@Html.DisplayFor(modelItem => item.LogoUrl)' style="max-width:100px; max-height:100px;" /> 
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
